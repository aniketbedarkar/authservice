        </sql>
    </changeSet>-->

    <!-- Insert default values from external SQL file -->
    <changeSet id="6-insert-default-values-using-sql-file" author="aniket">
        <sqlFile path="db/changelog/insert-default-values.sql"
                 splitStatements="false"
                 endDelimiter=";" />
    </changeSet>

</databaseChangeLog>
